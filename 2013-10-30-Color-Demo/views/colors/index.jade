extends ../template/layout

block content
  .row
    .small-12.columns
      h1 Colors Page
  .row
    .small-2.columns
      a.button.radius.small(href='/') Home
    .small-10.columns
  .row
    table#colors
      thead: tr
        each color in colors
          th= color
      tbody: tr
        each color in colors
        - var width = (100 / colors.length) * 100;
          td.color(style='background-color: #{color}, width: #{width}%;')