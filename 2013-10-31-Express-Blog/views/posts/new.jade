extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      h1.subheader New Post
  .row
    .small-2.columns
      a.button.expand.tiny.radius(href='/') Home
    .small-2.columns
      a.button.expand.tiny.radius(href='/posts') Posts
    .small-2.columns
      a.button.expand.tiny.radius.success(href='/posts/new') New
    .small-6.columns
  .row
    .small-12.columns
      form(action='/posts', method='post')
        fieldset
          legend New Blog Entry
          .row
            mixin field(4, 'title', 'Title', null, null, true)
            mixin field(4, 'author', 'Author')
            mixin field(4, 'date', 'Date', date)
          .row
            mixin field(4, 'tags', 'Tags')
            mixin field(8, 'image', 'Image')
          .row
            .small-12.columns
              label(for='content') Content
              textarea#content(name='content')
          .row
            .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/posts') Cancel
            .small-2.columns: button.radius.success.small.expand(type='submit') Save Entry