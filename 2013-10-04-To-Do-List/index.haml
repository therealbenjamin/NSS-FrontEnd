!!! 5
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %title To Do List
    %link{rel: 'stylesheet', href: 'css/normalize.css'}
    %link{rel: 'stylesheet', href: 'css/style.css'}
  %body
    %header
      %h1 To Do List
    %input#add{type: 'button', value: 'Add Task'}
    %table
      %tr.home
        %th Due Date
        %th Task
        %th Color
        %th Done?
        %th Remove?
        %th Up / Down

    %script{src: 'js/jquery-1.10.2.min.js'}
    %script{src: 'js/underscore-min.js'}
    %script{src: 'js/main.js'}