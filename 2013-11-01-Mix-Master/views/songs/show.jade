extends ../template/layout

block content
  .row
    .small-12.columns
      h1= song.title
  .row
    .small-12.columns
      #songs
        img.album(src=song.art)
        audio(src='audios/#{song.filename}', controls=true)
        p= song.duration
        p= song.lyrics
        ul
          each genre in song.genres
            li= genre
        p= song.createdAt
