#left
  #map-canvas
#right
  .row
    .small-12.columns
      %h1 Vacation Map
  .row
    .small-6.columns
      %input#zoom{type: 'text', placeholder: '10'}
    .small-6.columns
      %input#set-zoom.button.radius.small{type: 'button', value: 'Set Zoom'}
  .row
    .small-6.columns
      %input#location{type: 'text', placeholder: 'Paris'}
    .small-6.columns
      %input#add-location.button.radius.success.small{type: 'button', value: 'Add Location'}
  .row
    .small-6.columns
      %select#location-select
        %option Select
    .small-6.columns
      %input#go-location.button.radius.alert.small{type: 'button', value: 'Show Location'}


